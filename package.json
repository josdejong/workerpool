{
  "name": "@danielsimonjr/workerpool",
  "license": "Apache-2.0",
  "version": "10.0.1",
  "description": "Offload tasks to a pool of workers on node.js and in the browser",
  "homepage": "https://github.com/danielsimonjr/workerpool",
  "author": "Jos de Jong <wjosdejong@gmail.com> (https://github.com/josdejong)",
  "contributors": [
    "Daniel Simon Jr (https://github.com/danielsimonjr)"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/danielsimonjr/workerpool.git"
  },
  "keywords": [
    "worker",
    "web worker",
    "cluster",
    "pool",
    "isomorphic"
  ],
  "main": "src/index.js",
  "browser": "dist/workerpool.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js",
      "require": "./src/index.js",
      "browser": "./dist/workerpool.js"
    },
    "./minimal": {
      "types": "./types/minimal.d.ts",
      "import": "./src/minimal.ts",
      "require": "./src/minimal.ts"
    },
    "./full": {
      "types": "./types/full.d.ts",
      "import": "./src/full.ts",
      "require": "./src/full.ts"
    },
    "./wasm": {
      "types": "./types/wasm.d.ts",
      "import": "./src/wasm/index.ts",
      "require": "./src/wasm/index.ts"
    },
    "./errors": {
      "types": "./types/errors.d.ts",
      "import": "./src/errors.ts",
      "require": "./src/errors.ts"
    },
    "./debug": {
      "types": "./types/debug.d.ts",
      "import": "./src/debug.ts",
      "require": "./src/debug.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "types",
    "HISTORY.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs && npm run build:types",
    "build:types": "tsc -p tsconfig.build.json",
    "build:wasm": "asc assembly/index.ts --config asconfig.json --target release",
    "build:wasm:debug": "asc assembly/index.ts --config asconfig.json --target debug",
    "build:wasm:esm": "asc assembly/index.ts --config asconfig.json --target release-esm",
    "build:wasm:raw": "asc assembly/index.ts --config asconfig.json --target release-raw",
    "build:wasm:all": "npm run build:wasm && npm run build:wasm:debug && npm run build:wasm:esm",
    "build:wasm:embed": "npm run build:wasm && node scripts/generate-wasm-bindings.mjs",
    "build:all": "npm run build:wasm:embed && npm run build",
    "typecheck": "tsc --noEmit",
    "typecheck:wasm": "tsc -p assembly/tsconfig.json --noEmit",
    "watch": "rollup -c rollup.config.mjs -w",
    "watch:wasm": "nodemon --watch assembly --ext ts --exec \"npm run build:wasm:debug\"",
    "test": "npm run build && mocha test && npm run test:types",
    "test:types": "tsc -p test/types",
    "test:wasm": "npm run build:wasm && tsx node_modules/mocha/bin/mocha test/wasm.test.js",
    "test:debug": "npm run build && mocha debug test",
    "coverage": "npm run build && c8 mocha && c8 report --reporter=html && echo Coverage report is available at ./coverage/index.html",
    "clean": "rm -rf dist/*.wasm dist/*.wat dist/*.wasm.map",
    "clean:all": "rm -rf dist node_modules/.cache",
    "validate:wasm": "node scripts/validate-wasm.mjs",
    "prepublishOnly": "npm run test && npm run build:all"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@rollup/plugin-babel": "6.1.0",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/node": "24.10.1",
    "assemblyscript": "^0.28.9",
    "c8": "10.1.3",
    "core-js": "3.47.0",
    "date-format": "4.0.14",
    "find-process": "2.0.0",
    "fs-extra": "11.3.2",
    "mocha": "11.7.5",
    "rollup": "4.53.3",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  }
}
