{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types/ts",
    "emitDeclarationOnly": true,
    "sourceMap": false
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/ts/generated"
  ]
}
