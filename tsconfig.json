{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/ts",
    "rootDir": "./src/ts",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/ts/*"]
    },
    "types": ["node"],
    "allowJs": false,
    "checkJs": false,
    "noEmit": true
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/ts/generated",
    "src/ts/assembly"
  ]
}
